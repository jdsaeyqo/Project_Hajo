<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:padding="4dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/c_mPlan_header"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_delete_mPlan"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="삭제"
                    android:textColor="@color/error"
                    android:textSize="20sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_mPlan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중플랜 상세"
                android:textSize="28dp"
                android:textColor="#403F3F"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_mplan_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>



        </LinearLayout>


        <TextView
            android:id="@+id/tv_mplan_name"
            android:text="중플랜 이름"
            android:textSize="20sp"
            android:textColor="@color/grey_70"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_mplan_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="중플랜 이름을 입력하세요."
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tv_mplan_description"
            android:text="중플랜 설명"
            android:textSize="20sp"
            android:textColor="@color/grey_70"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_mplan_detail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="중플랜 설명을 입력하세요."
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">



        </LinearLayout>

        <Button
            android:id="@+id/btn_save_mplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="20sp"
            android:fontFamily="@font/nanum_square_round_b"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/primary"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>