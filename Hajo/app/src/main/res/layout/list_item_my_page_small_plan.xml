<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="month"
            type="java.util.Date" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginStart="1dp">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jul"
            android:fontFamily="@font/nanum_square_round_r"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/iv_record1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/record0" />

        <ImageView
            android:id="@+id/iv_record2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/record1" />

        <ImageView
            android:id="@+id/iv_record3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/record2" />

        <ImageView
            android:id="@+id/iv_record4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/record3" />

        <ImageView
            android:id="@+id/iv_record5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/record0" />

        <ImageView
            android:id="@+id/iv_record6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/record0" />

        <ImageView
            android:id="@+id/iv_record7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/record0" />

    </LinearLayout>
</layout>