<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E6E6"
    tools:context=".diary.DiaryHomeActivity">

    <TextView
        android:fontFamily="@font/kotra_hope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="20dp"
        android:text = "나의 다이어리"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/c_books"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c_books"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:background="@drawable/books"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_diary1"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:backgroundTint="#00F9F4FC"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@+id/c_books"
            app:layout_constraintBottom_toBottomOf="@id/c_books"
            app:layout_constraintStart_toStartOf="@id/c_books"
            app:layout_constraintEnd_toStartOf="@id/btn_diary2"/>

        <TextView
            android:id="@+id/tv_diary1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kotra_hope"
            tools:text = "나\n의\n다\n이\n어\n리"
            android:textColor="#0B0B0B"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/btn_diary1"
            app:layout_constraintEnd_toEndOf="@id/btn_diary1"
            app:layout_constraintTop_toTopOf="@id/btn_diary1"
            app:layout_constraintBottom_toBottomOf="@id/btn_diary1"/>

        <ImageButton
            android:id="@+id/btn_diary2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFFFF"
            android:layout_marginLeft="7dp"

            app:layout_constraintTop_toTopOf="@+id/c_books"
            app:layout_constraintBottom_toBottomOf="@id/c_books"
            app:layout_constraintStart_toEndOf="@id/btn_diary1"
            app:layout_constraintEnd_toStartOf="@id/btn_diary3"/>

        <TextView
            android:id="@+id/tv_diary2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/kotra_hope"
            android:layout_marginLeft="5dp"
            tools:text = "나\n의\n다\n이\n어\n리"
            app:layout_constraintStart_toStartOf="@id/btn_diary2"
            app:layout_constraintEnd_toEndOf="@id/btn_diary2"
            app:layout_constraintTop_toTopOf="@id/btn_diary2"
            app:layout_constraintBottom_toBottomOf="@id/btn_diary2"/>

        <ImageButton
            android:id="@+id/btn_diary3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFFFF"
            android:layout_marginLeft="10dp"

            app:layout_constraintTop_toTopOf="@+id/c_books"
            app:layout_constraintBottom_toBottomOf="@id/c_books"
            app:layout_constraintStart_toEndOf="@id/btn_diary2"
            app:layout_constraintEnd_toStartOf="@id/btn_diary4"/>

        <TextView
            android:id="@+id/tv_diary3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text = "나\n의\n다\n이\n어\n리"
            android:fontFamily="@font/kotra_hope"
            app:layout_constraintStart_toStartOf="@id/btn_diary3"
            app:layout_constraintEnd_toEndOf="@id/btn_diary3"
            app:layout_constraintTop_toTopOf="@id/btn_diary3"
            app:layout_constraintBottom_toBottomOf="@id/btn_diary3"/>

        <ImageButton
            android:id="@+id/btn_diary4"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFFFF"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/c_books"
            app:layout_constraintBottom_toBottomOf="@id/c_books"
            app:layout_constraintStart_toEndOf="@id/btn_diary3"
            app:layout_constraintEnd_toStartOf="@id/btn_diary5"/>

        <TextView
            android:id="@+id/tv_diary4"
            tools:text = "나\n의\n다\n이\n어\n리"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/kotra_hope"
            app:layout_constraintStart_toStartOf="@id/btn_diary4"
            app:layout_constraintEnd_toEndOf="@id/btn_diary4"
            app:layout_constraintTop_toTopOf="@id/btn_diary4"
            app:layout_constraintBottom_toBottomOf="@id/btn_diary4"/>

        <ImageButton
            android:id="@+id/btn_diary5"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/c_books"
            app:layout_constraintBottom_toBottomOf="@id/c_books"
            app:layout_constraintStart_toEndOf="@id/btn_diary4"
            app:layout_constraintEnd_toEndOf="@id/c_books"/>

        <TextView
            android:id="@+id/tv_diary5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/kotra_hope"
            tools:text = "나\n의\n다\n이\n어\n리"
            app:layout_constraintStart_toStartOf="@id/btn_diary5"
            app:layout_constraintEnd_toEndOf="@id/btn_diary5"
            app:layout_constraintTop_toTopOf="@id/btn_diary5"
            app:layout_constraintBottom_toBottomOf="@id/btn_diary5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>