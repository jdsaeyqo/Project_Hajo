<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="Boast"
            type="com.ssafy.hajo.repository.dto.response.BoastHomeResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/iv_board_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_share_card"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanum_square_round_eb"
            android:text="@{Boast.boastTitle}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_board_image"
            app:layout_constraintTop_toBottomOf="@id/iv_board_image"
            tools:text="제목" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>